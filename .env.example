# Database Configuration (SQLite for dev, PostgreSQL for production)
DATABASE_URL=sqlite:///./fraud_detection.db
# For PostgreSQL: DATABASE_URL=postgresql://postgres:postgres@localhost:5432/fraud_detection

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_TTL=3600

# Model Paths
ISOLATION_FOREST_PATH=models/isolation_forest.pkl
XGBOOST_PATH=models/xgboost.pkl

# Model Weights
UNSUPERVISED_WEIGHT=0.3
SUPERVISED_WEIGHT=0.7

# Decision Thresholds
APPROVE_THRESHOLD=0.50
BLOCK_THRESHOLD=0.85

# Cost Matrix
FALSE_POSITIVE_COST=50.0
FALSE_NEGATIVE_COST=1000.0

# API Settings
API_KEY=dev-api-key-change-in-production
RATE_LIMIT_PER_MINUTE=100

# Performance Settings
HIGH_VALUE_THRESHOLD=10000.0

# Monitoring
PERFORMANCE_DEGRADATION_THRESHOLD=0.05
